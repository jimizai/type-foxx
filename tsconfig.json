{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"alwaysStrict": true,
		"charset": "utf8",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"module": "commonjs",
		"downlevelIteration": true,
		"lib": ["es6", "dom"],
		"esModuleInterop": true,
		"newLine": "lf",
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"pretty": true,
		"skipLibCheck": true,
		"strict": true,
		"stripInternal": true,
		"baseUrl": "./",
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["src/**/*", "test/**/*", "modules/**/*"],
	"exclude": ["dist", "node_modules", "**/*.spec.ts"]
}
